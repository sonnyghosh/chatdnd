FROM node as build-setup
WORKDIR /app
ENV PATH ./node_modules/.bin:$PATH
COPY /dnd-client/package.json ./
RUN npm install
COPY ./dnd-client/src ./src
COPY ./dnd-client/public ./public
COPY ./dnd-client/tailwind.config.js ./
COPY ./dnd-client/postcss.config.js ./
COPY ./dnd-client/vite.config.js ./
CMD ["npm", "start"]


