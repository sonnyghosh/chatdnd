FROM node as build-setup
WORKDIR /app
ENV PATH ./node_modules/.bin:$PATH
COPY package.json ./
RUN npm install
COPY ./src ./src
COPY ./public ./public
COPY craco.config.js ./
COPY tailwind.config.js ./
COPY tailwind.config.scss ./
CMD ["npm", "start"]


